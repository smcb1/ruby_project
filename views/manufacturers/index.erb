<h1>Manufacturers</h1>
<button class="button"><span><a href="/manufacturers/new" style="color:white;">Add new manufacturer</a></span></button>
<div id="flex-container">
  <% for manufacturer in @manufacturers %>
  <div class="item">
    <p><a href="/manufacturers/<%= manufacturer.id %>"><%= manufacturer.contact_name %></a></p>
  </div>
  <div class="item">
    <h4>Address:</h4>
    <p><%= manufacturer.contact_address %></p>
  </div>
  <div class="item">
    <h4>Telephone:</h4>
    <p><%= manufacturer.contact_number %></p>
  </div>
  <% end %>
 </div>
</div>
