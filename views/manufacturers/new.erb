<h1>Add a new manufacturer:</h1>
<form action="/manufacturers" method="post">
  <div class="form-wrapper">
    <div>
      <label for="name">Manufacturer Name:</label>
      <input type="text" name="contact_name" id="name" autofocus required/>
    </div>

    <div>
      <label for="price">Address:</label>
      <input type="text" name="contact_address" id="contact_address" required/>
    </div>

    <div>
      <label for="price">Telephone number:</label>
      <input type="text" name="contact_number" id="contact_number" required/>
    </div>

    <div>
      <label for="quantity">Cost:</label>
      <input type="text" name="list_cost" id="list_cost" required/>
    </div>

    <div>
      <input type="submit" class="button" value="Add Manufacturer"/>
    </div>
  </div>
