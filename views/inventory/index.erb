<h1>All Products in stock</h1>

<div class="flex-grid-thirds">
  <div class="col">
  <% for product in @products %>
  <div>
    <a href="/products/<%= product.id %>"><%= product.product_name %></a>
  </div>
  <div class="col">
    <p><%= product.get_manufacturer %> </p>
  </div>
  <div class="col">
    <p><%= product.get_category %> </p>
  </div>
  <div class="col">
    <% if product.quantity <= 5 %>
    <p class="red">Quantity: <%= product.quantity %></p>
    <% elsif product.quantity <= 50 %>
    <p class="orange">Quantity: <%= product.quantity %></p>
    <% else %>
    <p class="green">Quantity: <%= product.quantity %></p>
    <% end %>
  </div>
  <% end %>
</div>
