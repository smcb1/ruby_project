<h1>Add a new product:</h1>
<form action="/products" method="post">
  <div class="form-wrapper">
    <div>
      <label>
        Select a Manufacturer:
        <select id="manufacturer_id" name="manufacturer_id" autofocus >
          <% for manufacturer in @manufacturers %>
          <option value="<%= manufacturer.id %>"><%= manufacturer.contact_name %></option>
          <% end %>
        </select>
      </label>
    </div>

    <label>
      Select a Product Category:
      <select id="category_type" name="category_type">
        <% for category in @categories %>
        <option value="<%= category.id %>"><%= category.category_type %></option>
        <% end %>
      </select>
    </label>
  </div>

  <input type="hidden" name="category_id" id="category_id" value="<%= category.id %>">
  <input type="hidden" name="manufacturer_id" id="manufacturer_id" value="<%= manufacturer.id %>">

  <div>
    <label for="product_name">Product Name:</label>
    <input type="text" name="product_name" id="product_name" required/>
  </div>

  <div>
    <label for="description">Description:</label>
    <input type="text" name="description" id="description" required/>
  </div>

  <div>
    <label for="list_price">Price:</label>
    <input type="text" name="list_price" id="list_price" required/>
  </div>

  <div>
    <label for="quantity">Quantity:</label>
    <input type="text" name="quantity" id="quantity" required/>
  </div>

  <div>
    <input type="submit" class="button" value="Add Product"/>
  </div>
</div>
