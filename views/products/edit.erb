<h2>Edit Product</h2>
<form action="/products/<%= @product.id %>" method="post">
  <div class="form-wrapper">

    <input type="hidden" name="product_id" id="product_id" value="<%= @product.id %>"/>
    <input type="hidden" name="manufacturer_id" id="manufacturer_id" value="<%= @product.manufacturer_id %>"/>
    <input type="hidden" name="category_id" id="category_id" value="<%= @product.category_id %>"/>

    <div>
      <label for="product_name">Name:</label>
      <input type="text" name="product_name" id="product_name" value="<%= @product.product_name %>" autofocus/>
    </div>

    <div>
      <label for="last_name">Description:</label>
      <input type="text" name="description" id="description" value="<%= @product.description%>"/>
    </div>

    <div>
      <label for="age">Price:</label>
      <input type="number" name="list_price" id="list_price" value="<%= @product.list_price %>"/>
    </div>

    <div>
      <label for="age">Quantity:</label>
      <input type="number" name="quantity" id="quantity" value="<%= @product.quantity %>"/>
    </div>

    <div>
      <input type="submit" class="button" value="Update Product" />
    </div>

  </div>
</form>
