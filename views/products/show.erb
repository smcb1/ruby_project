<h3>Product Details:</h3>

<div class="row">
  <div class="col-xs-4">
    <div class="box"><p><a href="/products/<%= @products.id %>"><%= @products.product_name %></a></p></div>
    <div class="box>Product Manufacturer:<a href="/manufacturers/<%= @products.manufacturer_id %>"/><%= @products.get_manufacturer %></a></div>
    <div class="box"><p><%= @products.description %></p></div>
    <div class="box"><p>Quantity: <%= @products.quantity %></p></div>
  </div>
</div>

  <button class="button"><a href="/products/<%= @products.id %>/edit" style="color:white;">Edit Product</a></button>
  <form action="/products/<%= @products.id %>/delete" method="POST"><input type="submit" class="button" onclick="return confirm('Confirm Delete?');" value="Delete"></form>
