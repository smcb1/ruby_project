<h2>Product Details:</h2>

<div class="row">
  <div class="col-xs-4">
    <div class="box"><p><a href="/products/<%= @product.id %>"><%= @product.product_name %></a></p></div>
    <div class="box>Product Manufacturer:<a href="/manufacturers/<%= @product.manufacturer_id %>"/><%= @product.get_manufacturer %></a></div>
    <div class="box"><p>Category: <%= @product.get_category %></p></div>
    <div class="box"><p><%= @product.description %></p></div>
    <div class="box"><p>Quantity: <%= @product.quantity %></p></div>
  </div>
</div>

<div class="row">
  <button class="button"><a href="/products/<%= @product.id %>/edit" style="color:white;">Edit Product</a></button>
  <form action="/products/<%= @product.id %>/delete" method="POST"><input type="submit" value="Delete"></form>
</div>
